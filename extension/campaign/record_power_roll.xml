<?xml version="1.0" encoding="UTF-8"?>
<root>
	<windowclass name="power_heal_editor_main" merge="join">
		<sheetdata>
			<button_stringcycler name="healtype">
				<parameters>
					<defaultlabelres>power_label_healtypecur</defaultlabelres>
					<labelsres>power_label_healtypetemp|power_label_healtypemax</labelsres>
					<values>temp|max</values>
				</parameters>
			</button_stringcycler>
		</sheetdata>
	</windowclass>
	
	<windowclass name="power_transfer_editor">
		<frame>charsheethelper</frame>
		<placement>
			<size width="380" height="350" />
		</placement>
		<sizelimits>
			<minimum width="380" height="350" />
			<dynamic />
		</sizelimits>
		<nodelete />
		<playercontrol />
		<minimize>minimized_char</minimize>
		<tooltip control="name" />
		<sheetdata>
			<windowtitlebar_char name="title">
				<resource>power_title_transfer</resource>
			</windowtitlebar_char>
			<anchor_title_charsheethelper name="contentanchor" />
			
			<genericcontrol name="contentframe">
				<anchored to="contentanchor">
					<top anchor="bottom" offset="0" />
					<left />
					<right />
					<bottom parent="" offset="-30" />
				</anchored>
			</genericcontrol>

			<subwindow_record name="main">
				<class>power_transfer_editor_main</class>
				<activate />
				<fastinit />
			</subwindow_record>

			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>

			<resize_charsheethelper />
			<close_charsheethelper />
		</sheetdata>
	</windowclass>
	<windowclass name="power_transfer_editor_main">
		<script>
			function onDrop(x, y, draginfo)
				local sDragType = draginfo.getType();
				
				if sDragType == "dice" then
					local w = list.addEntry(true);
					for _, vDie in ipairs(draginfo.getDieList()) do
						w.dice.addDie(vDie.type);
					end
					return true;
				elseif sDragType == "number" then
					local w = list.addEntry(true);
					w.bonus.setValue(draginfo.getNumberData());
					return true;
				end
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />
			
			<label_column name="name_label">
				<static textres="power_label_name" />
			</label_column>
			<stringcontrol name="name">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
					<left offset="97" />
					<right offset="-5" />
				</anchored>
				<multilinespacing>20</multilinespacing>
				<font>sheettext</font>
				<readonly />
			</stringcontrol>
			
			<header_column name="header_transfer">
				<static textres="power_header_transfer" />
				<center />
			</header_column>
			<button_iedit name="list_iedit">
				<anchored to="header_transfer" position="insidetopright" offset="-5,0" />
				<target>list</target>
			</button_iedit>
			<button_iadd name="list_iadd">
				<anchored to="list_iedit" position="lefthigh" offset="5,0" />
				<target>list</target>
			</button_iadd>

			<list_editor name="list">
				<datasource>.transferlist</datasource>
				<class>power_transfer_entry</class>
			</list_editor>
			
			<label_fieldtop>
				<anchored to="list" position="aboveleft" offset="5,1" width="60" />
				<static textres="weapon_label_dmgdice" />
			</label_fieldtop>
			<label_fieldtop>
				<anchored to="list" position="aboveleft" offset="82,1" width="67" />
				<static textres="weapon_label_dmgstat" />
			</label_fieldtop>
			<label_fieldtop>
				<anchored to="list" position="aboveleft" offset="166,1" width="35" />
				<static textres="weapon_label_dmgbonus" />
			</label_fieldtop>
			<label_fieldtop>
				<anchored to="list" position="aboveright" offset="5,1" width="35" />
				<static textres="transfer_label_ratio" />
			</label_fieldtop>
			<label_fieldtop>
				<anchored to="list" position="aboveright" offset="45,1">
					<left offset="211" />
				</anchored>
				<static textres="weapon_label_dmgtype" />
			</label_fieldtop>
		</sheetdata>
	</windowclass>
	<windowclass name="power_transfer_entry">
		<margins control="0,0,0,5" />
		<sheetdata>
			<genericcontrol name="rightanchor">
				<anchored width="0" height="0">
					<top offset="2" />
					<right />
				</anchored>
				<invisible />
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored to="rightanchor">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
			</button_idelete>

			<basicdice name="dice">
				<anchored position="insidetopleft" offset="5,2" width="60" height="20" />
			</basicdice>
			<label name="label_plus">
				<anchored to="dice" position="righthigh" offset="5,0" width="10" />
				<static>+</static>
			</label>
			<basicnumber name="statmult">
				<anchored to="label_plus" position="righthigh" offset="3,0" width="20" height="20" />
				<default>1</default>
				<min>0</min>
				<hideonvalue>1</hideonvalue>
				<tooltip textres="power_tooltip_statmult" />
			</basicnumber>
			<label name="label_statmultx">
				<anchored to="statmult" position="righthigh" offset="4,0" width="10" />
				<static>x</static>
				<center />
			</label>
			<cycler_power name="stat">
				<anchored to="label_statmultx" position="righthigh" offset="3,0" width="30" height="20" />
			</cycler_power>
			<label name="label_plus2">
				<anchored to="stat" position="righthigh" offset="5,0" width="10" />
				<static>+</static>
			</label>
			<basicnumber name="bonus">
				<anchored to="label_plus2" position="righthigh" offset="2,0" width="35" height="20" />
				<hideonvalue>0</hideonvalue>
			</basicnumber>
			<basicnumber name="ratio">
				<anchored to="rightanchor" width="35" height="20">
					<top />
					<right  anchor="left" relation="relative" offset="-5" />
				</anchored>
				<default>1</default>
			</basicnumber>
			<label name="label_at">
				<anchored to="rightanchor" width="12" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<static>@</static>
			</label>
			<stringu name="type">
				<anchored to="bonus" position="righthigh" offset="10,0" height="20">
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
			</stringu>
		</sheetdata>
	</windowclass>
</root>